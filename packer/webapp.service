
[Unit]
Description=Node.js Application
//ConditionPathExists=/opt/csye6225/.env
After=network.target
 

 
[Service]
EnvironmentFile=/opt/csye6225/.env
Type=simple
User=csye6225
Group=csye6225
WorkingDirectory=/opt/csye6225
EnvironmentFile=/opt/csye6225/.env
ExecStart=/usr/bin/node app.js
Restart=always
RestartSec=3
